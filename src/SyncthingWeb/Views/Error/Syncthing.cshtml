@model SyncthingErrorViewModel

@{
    ViewBag.Title = "Syncthing connection error occured";
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Something went wrong while connecting to syncthing api.</h3>
            </div>
            <div class="box-body">
                There was error while connecting to Syncthing API. Probably server is not accessible or url given during setup invalid. Check error below:
                <div class="well-lg">
                    @Model.Message
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>