@model IndexViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-md-12 col-sm-12 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h4>Welcome to your profile</h4>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <label>Password</label>
                    @if (Model.HasPassword)
                    {

                        <input type="text" value="*****" readonly="readonly" class="form-control" />
                        <a class="btn btn-prmary" href="@Url.Action("ChangePassword")">Change</a>
                    }
                    else
                    {
                        <input type="text" value="(not set)" readonly="readonly" class="form-control" />
                        <a class="btn btn-prmary" href="@Url.Action("SetPassword")">Set</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

